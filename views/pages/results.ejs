<!DOCTYPE html>

<html>

  <head>
      
  </head>
  <body>
    <header>
      <%- include('../layout/header') %>
    </header>
      <main>
        <section>
          <form action="/results" method="post">
          <input type="hidden" name="_method" value="put">
          <input type="hidden" name="distance" value="<%= resultsView %>">
            <fieldset>
              Distance: <span id="distance"><%= resultsView[0] %></span>
              <select id="units"></select>
              Travel Time:  <span id="time"> <%= resultsView[5] %> </span>
              <select id="speedmenu"></select>
              <ul> <!--will add in maybe an link that will fill in each one?-->
                <li>Fun Fact 1</li>
                <li>Fun Fact 2</li>
                <li>Fun Fact 3</li>
                <li>Fun Fact 4</li>
                <li>Fun Fact 5</li>
              </ul> 
            </fieldset>
          </form>
          <p id="kilometers"><%= resultsView[0] %></p>
          <p id="meters"><%= resultsView[1] %></p>
          <p id="miles"><%= resultsView[2] %></p>
          <p id="lightyears"><%= resultsView[3].toPrecision(2) %></p>
          <p id="atlas"><%= resultsView[4] %></p>
          <p id="conventional-rocket"><%= resultsView[5] %></p>
          <p id="ion-rocket"><%= resultsView[6] %></p>
          <p id="walking"><%= resultsView[7] %></p>
          <p id="dog-walking"><%= resultsView[8] %></p>
          <p id="driving"><%= resultsView[9] %></p>
        </section>
      </main>
  </body>
  <footer>
      <%- include('../layout/footer') %>
  </footer>

</html>
